{
  "$schema": "https://biomejs.dev/schemas/2.3.4/schema.json",
  "extends": "//",
  "files": { "ignoreUnknown": false },
  "linter": {
    "rules": {
      "correctness": {
        "useHookAtTopLevel": "off"
      },
      "complexity": {
        "noStaticOnlyClass": "off"
      },
      "style": {
        "useImportType": "off"
      }
    }
  },
  "javascript": {
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    }
  },
  "root": false
}
